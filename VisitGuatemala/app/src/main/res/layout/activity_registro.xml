<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.jcloarca.visitguatemala.Registro">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/registro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNombre"
        android:hint="Nombre..."
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtTelefono"
        android:layout_below="@+id/txtNombre"
        android:layout_alignLeft="@+id/txtNombre"
        android:layout_alignStart="@+id/txtNombre"
        android:hint="Teléfono..."
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/phone"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtCorreo"
        android:layout_below="@+id/txtTelefono"
        android:layout_alignLeft="@+id/txtTelefono"
        android:layout_alignStart="@+id/txtTelefono"
        android:hint="Email..."
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/email"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDireccion"
        android:layout_below="@+id/txtCorreo"
        android:hint="Dirección..."
        android:layout_alignRight="@+id/txtCorreo"
        android:layout_alignEnd="@+id/txtCorreo"
        android:layout_alignLeft="@+id/txtCorreo"
        android:layout_alignStart="@+id/txtCorreo"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:drawableLeft="@drawable/address"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUsername"
        android:layout_below="@+id/txtDireccion"
        android:layout_alignLeft="@+id/txtDireccion"
        android:layout_alignStart="@+id/txtDireccion"
        android:layout_alignRight="@+id/txtDireccion"
        android:layout_alignEnd="@+id/txtDireccion"
        android:hint="Username...."
        android:gravity="center_horizontal"
        android:inputType="text"
        android:drawableLeft="@drawable/user"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtContraseña"
        android:layout_below="@+id/txtUsername"
        android:layout_alignLeft="@+id/txtUsername"
        android:layout_alignStart="@+id/txtUsername"
        android:hint="Contraseña..."
        android:gravity="center_horizontal"
        android:drawableLeft="@drawable/password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:id="@+id/btnRegistrar"
        android:layout_below="@+id/txtContraseña"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/btnRegistrar"
        android:layout_alignLeft="@+id/btnRegistrar"
        android:layout_alignStart="@+id/btnRegistrar" />

</RelativeLayout>
